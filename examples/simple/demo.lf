test "Hello DSL" {
  environment {
    baseUrl = env("BASE_URL")
    token   = env("TOKEN")
  }

  target #baseUrl

  variables {
    q = "phone"
    q2 = "laptop"
  }

  scenario "search" {
    request GET "/catalog/search?q=${q}"
    expect status 404
  }

  scenario "search again" {
    request GET "/catalog/search?q=${q2}"
    expect status 404
  }

  load {
    users 10
    rampUp 10s
    duration 1m
  }
}
